{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "Node",
        "allowJs": true,
        "outDir": "public",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es6", "dom"]
    },
    "files": ["src/index.ts"],
    "include": ["src/**/*.ts"]
}
